// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Architect {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  company   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  roomTypes         RoomType[]
  inspirationPhotos InspirationPhoto[]
  clientSessions    ClientSession[]

  @@map("architects")
}

model ClientSession {
  id                 String   @id @default(cuid())
  firstName          String
  lastName           String
  email              String
  architectId        String
  selectedRoomTypes  String? // JSON array of room type IDs selected by client
  status             String   @default("in_progress") // in_progress, completed, abandoned
  createdAt          DateTime @default(now())
  completedAt        DateTime?
  updatedAt          DateTime @updatedAt
  
  // General project information
  projectType        String? // construction, renovation, extension, remodeling
  housingType        String? // house, apartment, other
  housingTypeOther   String?
  propertyUsage      String? // primary, secondary, rental
  householdAdults    Int?
  householdChildren  Int?
  householdGrandchildren Int?
  childrenAges       String?
  hasAnimals         Boolean?
  desiredOrganization String? // single_story, multi_story, extension, elevation, unsure
  organizationComments String?

  // Relations
  architect          Architect           @relation(fields: [architectId], references: [id], onDelete: Cascade)
  clientAnswers      ClientAnswer[]
  photoInteractions  PhotoInteraction[]

  @@map("client_sessions")
}

model RoomType {
  id           String  @id @default(cuid())
  name         String
  displayOrder Int     @default(0)
  architectId  String
  parentId     String? // Pour la hiérarchie (null = catégorie principale)
  active       Boolean @default(true)

  // Relations
  architect Architect   @relation(fields: [architectId], references: [id], onDelete: Cascade)
  questions Question[]
  parent    RoomType?   @relation("RoomHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  RoomType[]  @relation("RoomHierarchy")

  @@map("room_types")
}

model Question {
  id           String @id @default(cuid())
  roomTypeId   String
  questionText String
  questionType String // text, select, multiple, range, boolean
  optionsJson  String? // JSON string for select/multiple options
  required     Boolean @default(false)
  displayOrder Int     @default(0)
  active       Boolean @default(true)

  // Relations
  roomType      RoomType       @relation(fields: [roomTypeId], references: [id], onDelete: Cascade)
  clientAnswers ClientAnswer[]

  @@map("questions")
}

model ClientAnswer {
  id           String   @id @default(cuid())
  sessionId    String
  questionId   String
  answerValue  String
  createdAt    DateTime @default(now())

  // Relations
  session  ClientSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question Question      @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, questionId])
  @@map("client_answers")
}

model InspirationPhoto {
  id          String   @id @default(cuid())
  architectId String
  sessionId   String?  // Pour les photos uploadées par le client
  roomTypeIds String?  // JSON array of room type IDs
  imageUrl    String
  title       String?
  description String?
  tags        String?  // JSON array of tags
  active      Boolean  @default(true)
  isClientUpload Boolean @default(false) // true si uploadée par le client
  createdAt   DateTime @default(now())

  // Relations
  architect         Architect          @relation(fields: [architectId], references: [id], onDelete: Cascade)
  photoInteractions PhotoInteraction[]

  @@map("inspiration_photos")
}

model PhotoInteraction {
  id              String   @id @default(cuid())
  sessionId       String
  photoId         String
  action          String   // like, dislike
  annotationsJson String? // JSON with click coordinates and comments
  createdAt       DateTime @default(now())

  // Relations
  session ClientSession    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  photo   InspirationPhoto @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@unique([sessionId, photoId])
  @@map("photo_interactions")
}
